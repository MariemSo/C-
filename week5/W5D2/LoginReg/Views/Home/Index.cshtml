@{
    ViewData["Title"] = "Home Page";
}

@model User
<div class="text-center ">
	<div class="row gap-2 ">
        <div class="card shadow col-5 ">
            <h2 class="card-header text-primary h2">Register</h2>
            <div class="card-body">
                <form asp-action="Register" asp-controller="Home" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                        <input asp-for="FirstName" class="form-control">
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                        <input class="form-control" asp-for="LastName">
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <input class="form-control" asp-for="Email">
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input class="form-control" asp-for="Password">
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Confirm" class="form-label"></label>
                        <span asp-validation-for="Confirm" class="text-danger"></span>
                        <input class="form-control" asp-for="Confirm">
                    </div>
                    <div class="text-end">
                        <input type="submit" class="btn btn-primary w-100" value="Register">
                    </div>
                </form>
            </div>
        </div>
        @* Login *@
         <div class="card shadow col-5">
            @await Html.PartialAsync("_Login")
        </div>
    </div>
</div>
