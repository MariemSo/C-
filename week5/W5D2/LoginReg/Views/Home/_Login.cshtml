@model LoginUser
<div class="card-header text-primary h2">Login</div>
<div class="card-body">
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group mb-3">
            <label asp-for="LogEmail" class="form-label">Email</label>
            <span asp-validation-for="LogEmail" class="text-danger"></span>
            <input class="form-control" asp-for="LogEmail">
        </div>
        <div class="form-group mb-3">
            <label asp-for="LogPassword" class="form-label">Password</label>
            <span asp-validation-for="LogPassword" class="text-danger"></span>
            <input class="form-control" asp-for="LogPassword">
        </div>
        <div class="mb-3">
            <input type="submit" class="btn btn-primary w-100" value="Login">
        </div>
    </form>
</div>