@{
    ViewData["Title"] = "Home Page";
}
@model Dishes
<div >
    <div  >
        <h1 class="d-flex justify-content-center">@Model.Name</h1>
        <div class="d-flex justify-content-center">
           <a href="/"> <p>Home</p> </a>  |  <a href="/dishes/new"><p>Add a Dish</p></a> 
        </div>
    </div>
    <div>
        <h5>@Model.Name by @Model.Chef</h5> 
        <p>@Model.Description</p>
        <p>Calories:@Model.Calories</p>
        <p>Tastiness:@Model.Tastiness</p>
    </div>
    
    <div class="d-flex justify-content-around">
        <a asp-action="DeleteDish" asp-route-id="@Model.DishId"><button class="btn btn-danger">Delete</button></a>
        <a type="button" class="btn btn-info " href="/dishes/@Model.DishId/edit" >Edit</a>
    </div>
</div>
