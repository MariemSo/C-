@model Dishes

<div class="text-center">
    <div  >
        <h1 class="d-flex justify-content-center">Add a Dish</h1>
        <div class="d-flex justify-content-center">
            <p><a href="/">Home</a> </p> |<p>Add a Dish</p>
        </div>
    </div>
    <div class="mb">
        <form asp-action="UpdateDish" asp-route-DishId=@Model.DishId>
            <div class="form-group">
                <label asp-for="Chef">Chef's Name</label>
                <span asp-validation-for="Chef" class="text-danger"></span>
                <input asp-for="Chef" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Name">Name Of Dish</label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Calories"># of Calories</label>
                <span asp-validation-for="Calories" class="text-danger"></span>
                <input asp-for="Calories" class="form-control">
            </div>
             <div class="form-group">
                <label asp-for="Tastiness"></label>
                <span asp-validation-for="Tastiness" class="text-danger"></span>
                <input asp-for="Tastiness" class="form-control">
            </div>
             <div class="form-group">
                <label asp-for="Description"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control">
            </div>
            <input type="submit" value="Edit" class="btn btn-success">
        </form>
    </div>
</div>