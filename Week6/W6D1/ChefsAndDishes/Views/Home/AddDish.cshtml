@{
    ViewData["Title"] = "AddDish";

}
 @model Dish
<div class="text-center">
    <h1 class="display-4">üçΩÔ∏è Add a Dish üçΩÔ∏è</h1>
     <form asp-action="CreateDish" asp-controller="Home" method="post">
        @* Dish name *@
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name of Dish</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input asp-for="Name" class="form-control">
        </div>

        @* Calories *@
        <div class="mb-3">
            <label asp-for="Calories" class="form-label"># of Calories</label>
            <span asp-validation-for="Calories" class="text-danger"></span>
            <input asp-for="Calories" class="form-control">
        </div>

        @*Chef name *@
        <div class="mb-3">
            <label asp-for="ChefId" class="form-label">Chef's Name</label>
             <select class="form-select" asp-for="ChefId">
                     <option selected>Choose...</option>
                    @{
                    foreach(var chef in ViewBag.Chefs )
                    {
                        <option value="@chef.ChefId">@($"{chef.FirstName} {chef.LastName}")</option>
                    }
                    }              
            </select>
        </div>

        @* Tastiness *@
        <div class="mb-3">
            <label asp-for="Tastiness" class="form-label">Tastiness</label>
            <span asp-validation-for="Tastiness" class="text-danger"></span>
            <select class="form-select" asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Dish</button>
    </form>
</div>
