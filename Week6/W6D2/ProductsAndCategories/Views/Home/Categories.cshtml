@{
    ViewData["Title"] = "Privacy Policy";
}

@model Category
<div class="row text-center">
    <div class="col-6">
        <h1 class="display-4">New Category➕</h1>
        <form action="/new/Category" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control">
            </div><br>
            <div class="form-group">
                <input type ="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>
    <div class="col-6 ">
        <h1 class="display-4">All Categories🗃️</h1>
        <ul>
            @foreach (Category c in ViewBag.AllCategories)
            {
                <li class="text-start"><a href="/Category/@c.CategoryId">@c.Name</a></li>
            }
        </ul>
    </div>
</div>

