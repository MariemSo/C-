@{
    ViewData["Title"] = "Dishes";
}
@model List<Dish>
<div class="text-center">
    <h1 class="display-4">Yum! Check out our tasty dishes</h1>
<table class="table">
  <thead class="table-light">
    <th>Name</th>
    <th>Chef</th>
    <th>Tastiness</th>
    <th>Calories</th>

  </thead>
  <tbody>
    @foreach(Dish dish in Model)
    {
      <tr>
        <td>@dish.Name</td>
        <td>@($"{dish.Cook.FirstName} {dish.Cook.LastName}")</td>
        <td>@dish.Tastiness</td>
        <td>@dish.Calories</td>
      </tr>
    }
  </tbody>
</table>
</div>
